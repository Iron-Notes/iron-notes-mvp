<form method="post" action="/notes/emptyTrash">
    <button type="submit" class="btn btn-outline-danger m-2">
        <h3 style="margin:0; padding-top: 10px;" class="d-flex fa-solid fa-trash-can-arrow-up">
            <p>Empty Trash</p>
        </h3>
    </button>
</form>
<div class="row">
    {{#each deletedNotes}}
    <div class="col-xl-2 col-lg-3 col-md-6 col-sm-12 pt-3">
        <div class="card" style="max-height: 20vh; overflow-y: auto">
            <div class="d-flex justify-content-end">
                <form id="restore-form" style="margin:0" method="post" action="/notes/{{this._id}}/restore">
                    <button type="submit" class="btn btn-outline-success fa-solid fa-rotate-left m-1"></button>
                </form>
                <form id="delete-form" style="margin:0" method="post" action="/notes/{{this._id}}/deleteone">
                    <button type="submit" class="btn btn-outline-danger fa-solid fa-trash-can-arrow-up m-1"></button>
                </form>
            </div>
            <div class="card-body">
                <h5 id="edit-card-title" class="card-title" data-id="{{this._id}}">{{this.title}}</h5>
                <hr>
                <div>
                    <p id="edit-card-note" class="card-text">{{this.description}}</p>
                    {{#if this.imageURL}}
                    <img src="{{this.imageURL}}" class="card-img-top" alt="...image missing">
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{#unless deletedNotes}}
<h2>Trash is empty...</h2>
{{/unless}}